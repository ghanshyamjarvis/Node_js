<body>

<h1>add user</h1>

<form name="user" method="post" action="/add" enctype="multipart/form-data" onsubmit="return checkEmptyInput();">

  First name:<input type="text" name="firstname" value="<%= results.firstname %>" id="fn"><br>
  <% if(errors.firstname) { %><span style="color: red;">
<%= errors.firstname %></span>
  <% } %>
  <br>

  Last name:<input type="text" name="lastname" value="<%= results.lastname %>" id="ln"><br>
  <% if(errors.lastname) { %><span style="color: red;">
<%= errors.lastname %></span>
  <% } %>
  <br>

  Email:<input type="text" name="email" value="<%= results.email %>" id="email"> <br>
  <% if(errors.email) { %><span style="color: red;">
<%= errors.email %></span>
  <% } %>

  <% if(errors.emailnotvalid) { %><span style="color: red;">
<%= errors.emailnotvalid %></span>
  <% } %>
  <br>

  Password:<input type="password" name="password" value="<%= results.password %>" id="pwd"><br>
  <% if(errors.password) { %><span style="color: red;">
<%= errors.password %></span>
  <% } %>
  <br>

  Mobile:<input type="text" name="mobile" value="<%= results.mobile %>" id="mb"><br>
  <% if(errors.mobile) { %><span style="color: red;">
<%= errors.mobile %></span>
  <% } %>
  <br>

  Image: <input type="file" accept="image/*" name="image" value="<%= results.image %>"><br>
  <% if(errors.image) { %><span style="color: red;">
<%= errors.image %></span>
  <% } %>
  <br>

  <input type="submit" value="Submit">
</form>

